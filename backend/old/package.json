{
  "name": "hmml",
  "version": "1.3.0",
  "description": "HMML (Hello MaiMai Launcher) Backend Service",
  "main": "dist/app.js",
  "scripts": {
    "start": "node start.js",
    "start:dev": "node start-dev.js",
    "start:direct": "node dist/app.js",
    "dev": "nodemon --exec ts-node src/app.ts",
    "build": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "build:watch": "webpack --mode=development --watch",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "version-cli": "ts-node src/tools/version-cli.ts",
    "dev-tool": "ts-node src/tools/dev-tool.ts",
    "release": "powershell -ExecutionPolicy Bypass -File dev.ps1 release",
    "dev:build": "powershell -ExecutionPolicy Bypass -File dev.ps1 dev",
    "bump:patch": "powershell -ExecutionPolicy Bypass -File dev.ps1 bump patch",
    "bump:minor": "powershell -ExecutionPolicy Bypass -File dev.ps1 bump minor",
    "bump:major": "powershell -ExecutionPolicy Bypass -File dev.ps1 bump major",
    "status": "powershell -ExecutionPolicy Bypass -File dev.ps1 status"
  },
  "keywords": [
    "hmml",
    "launcher",
    "backend",
    "maimai"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.12.4",
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@koa/router": "^14.0.0",
    "better-sqlite3": "^12.2.0",
    "chalk": "^5.5.0",
    "fs-extra": "^11.3.1",
    "koa": "^3.0.1",
    "koa-body": "^6.0.1",
    "koa-session": "^7.0.2",
    "koa-static": "^5.0.0",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/fs-extra": "^11.0.4",
    "@types/koa": "^3.0.0",
    "@types/koa-session": "^6.4.5",
    "@types/koa-static": "^4.0.4",
    "@types/koa__router": "^12.0.4",
    "@types/node": "^24.2.1",
    "@types/uuid": "^10.0.0",
    "commander": "^12.0.0",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2",
    "webpack": "^5.101.1",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  }
}
